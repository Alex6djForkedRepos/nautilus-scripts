#!/usr/bin/env bash

# Source the file 'scripts/common-functions'
# shellcheck disable=SC1090
source "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")" | sed 's|\(scripts\).*|\1/common-functions|')"

# Initial checks
#_check_dependencies 7z || exit 1
INPUT_FILES=$(_get_files "$*" "" "1" "" "d") || exit 1
OUTPUT_DIR="$PWD"

_main_task() {
    local FILE=$1
    local OUTPUT_DIR=$2
    local STD_OUTPUT
    local EXIT_CODE

    case $FILE in
    *.tar.bz2 | *.tbz2 | *.tz2)
        _check_dependencies tar bzip2
        STD_OUTPUT=$(tar --extract --bzip2 --file="$FILE" 2>&1)
        ;;
    *.tar.gz | *.taz | *.tgz)
        _check_dependencies tar gzip
        STD_OUTPUT=$(tar --extract --gzip --file="$FILE" 2>&1)
        ;;
    *.tar.lz | *.tlz)
        _check_dependencies tar lzip
        STD_OUTPUT=$(tar --extract --lzip --file="$FILE" 2>&1)
        ;;
    *.tar.lzma | *.tlzma)
        _check_dependencies tar lzma
        STD_OUTPUT=$(tar --extract --lzma --file="$FILE" 2>&1)
        ;;
    *.tar.lzo | *.tlzo)
        _check_dependencies tar lzop
        STD_OUTPUT=$(tar --extract --lzop --file="$FILE" 2>&1)
        ;;
    *.tar.xz | *.txz)
        _check_dependencies tar xz
        STD_OUTPUT=$(tar --extract --xz --file="$FILE" 2>&1)
        ;;
    *.tar.Z | *.taZ)
        _check_dependencies tar gzip
        STD_OUTPUT=$(tar --extract --gzip --file="$FILE" 2>&1)
        ;;
    *.tar.zst | *.tzst)
        _check_dependencies tar zstd
        STD_OUTPUT=$(tar --extract --zstd --file="$FILE" 2>&1)
        ;;
    *.deb)
        _check_dependencies ar
        STD_OUTPUT=$(ar x "$FILE" 2>&1)
        ;;
    *.zst)
        _check_dependencies zstd
        STD_OUTPUT=$(zstd -d "$FILE" 2>&1)
        ;;
    *)
        _check_dependencies 7z
        STD_OUTPUT=$(7z x -aoa "$FILE" 2>&1)
        ;;
    esac

    EXIT_CODE=$?
    _log_error_result "$FILE" "$STD_OUTPUT" "$OUTPUT_DIR" "$EXIT_CODE" ""
}

_run_parallel_tasks "$INPUT_FILES"
_display_result_tasks "$OUTPUT_DIR"
